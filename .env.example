# Database Configuration
# Copy this file to .env and update with your local values
# DO NOT commit .env file to Git

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ultra_bms_dev
DB_USERNAME=ultra_bms_user
DB_PASSWORD=your_secure_password_here

# Docker Compose PostgreSQL Password
# This is used by docker-compose.yml to set the POSTGRES_PASSWORD environment variable
POSTGRES_PASSWORD=dev_password

